{
	"useTabs": true,
	"tabWidth": 4,
	"printWidth": 80,
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"parenSpacing": true,
	"semi": true,
	"arrowParens": "always",
	"htmlWhitespaceSensitivity": "ignore",
	"overrides": [
		{
			"files": "*.html",
			"options": { "parser": "lwc" }
		}
	]
}
