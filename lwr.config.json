{
	"lwc": { "modules": [{ "dir": "$rootDir/src/modules" }] },
	"bundleConfig": { "exclude": ["lwc"] },
	"assets": [
		{
			"alias": "assetsDir",
			"dir": "$rootDir/src/assets",
			"urlPath": "/assets"
		}
	],
	"routes": [
		{
			"id": "appRoot",
			"path": "/*",
			"rootComponent": "router/create",
			"layoutTemplate": "$layoutsDir/index.html"
		}
	]
}
